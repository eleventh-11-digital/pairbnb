<%= link_to "Home", root_path %>

<%= form_for @user do |form| %>

<div>
	<%= form.label :image %>
	<%= form.file_field :image %>
</div>

<div>
    <%= form.label :username %>
    <%= form.text_field :username %>
</div>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="password-comfirmation-field">
	<%= form.label :password_comfirmation %>
	<%= form.password_field :password_comfirmation %>
</div>
<%= form.submit %>
<%end%>